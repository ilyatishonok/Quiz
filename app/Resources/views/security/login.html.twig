<html>
<head>
    <link rel="stylesheet" href="{{ asset("static/styles/login.css") }}">
    <link rel="stylesheet" href="{{ asset("static/styles/bootstrap.css") }}">

</head>
<body>
    <div class="parent">
            <h5 class="login-header" style="text-align: center"><p style="margin-right: 7px;">Sign in to access your account</p></h5>
        <form action="{{ path('login') }}" method="post">
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" placeholder="type your username" value="{{ lastUsername }}" />

            <label for="password">Password:</label>
            <input type="password" id="password" placeholder="type you password" name="_password" />
            <div class="error">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
            <a>Forgot password?</a>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <button id="login" class="btn btn-large btn-block btn-primary" type="submit">Sign in</button>
            <input style="margin-left: 5px" type="checkbox" id="remember_me" name="_remember_me"  />
            <label style="float: left" for="remember_me">Keep me logged in</label>
        </form>
        <div class="register-block">
            <p>Don't have account yet? <a href="{{ path("registration") }}">Sign up</a></p>
        </div>
        </div>
</body>
</html>
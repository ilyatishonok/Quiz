{% extends 'base.html.twig' %}

{% trans_default_domain "translations" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("static/styles/admin/question.css?v1.37") }}">
{% endblock %}

{% block body %}
    <div class="container content">
        <div class="col-8 align-self-center question-handler">
            <div class="col content">
                <h1 class="question-header">{{ "admin.question.question_name"|trans }}</h1>
                <hr color="white">
                <input class="form-control question-name-input" placeholder="{{ "admin.question.question_placeholder"|trans }}">
                <div class="answer-wrapper">
                    <h2>Answers:</h2>
                    <p class="answer-info">{{ "admin.question.answer_info"|trans }}</p>
                    <ul class="answers">
                    </ul>
                    <input style="display: none" class="form-control answer-name-input" placeholder="{{ "admin.question.answer_placeholder"|trans }}">
                    <div class="errors"></div>
                    <div class="col align-self-center answer-add-wrapper">
                        <button class="btn btn-large add-answer">{{ "admin.question.answer_adding"|trans }}</button>
                    </div>
                </div>
                <div class="col align-self-end question-submit-wrapper">
                    <button class="btn btn-large submit-question">{{ "admin.question.question_create"|trans }}</button>
                </div>
        </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'translations' }) }}"></script>
    <script src="{{ asset("static/scripts/admin/question.js?v1.25") }}"></script>
{% endblock %}

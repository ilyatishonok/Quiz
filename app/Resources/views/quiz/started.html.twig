{% extends 'base.html.twig' %}

{% trans_default_domain "translations" %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("static/styles/quiz/startedQuiz.css?v1.24") }}">
{% endblock %}

{% block body %}

    <div class="container content">
        <div  class="col-8 align-self-center question">
            <div class="question-header">
                <h2>{{ "quiz.question.question_label"|trans }}:</h2>
                <h4 class="question-text">{{ question_name }}</h4>
            </div>
            <div class="form_wrapper">
                {{ form_start(form) }}
                <h2>{{ "quiz.question.answer_label"|trans }}:</h2>
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}